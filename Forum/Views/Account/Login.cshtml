@model Forum.ViewModel.LoginViewModel

<div class="uk-flex uk-flex-center uk-width-1-1">
    <div class="uk-background-muted uk-padding uk-margin-medium-top">
        <form asp-action="Login" asp-controller="Account">
            <legend class="uk-legend">Log in</legend>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input asp-for="Username" class="uk-input" type="text" placeholder="Username">
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                    <input asp-for="Password" class="uk-input" type="password" placeholder="Password">
                </div>
            </div>
            @if (Model.IsError)
            {
                <div class="uk-margin uk-text-center">
                    <p class="uk-text-danger">Invalid credentials</p>
                </div>
            }
            <div class="uk-margin uk-text-center">
                <button type="submit" class="uk-button uk-button-primary">Log in</button>
            </div>

            <div class="uk-margin uk-text-center uk-text-small">
                <a asp-controller="Account" asp-action="Register">Not registered? Create an account</a>
            </div>

        </form>
    </div>
</div>