@model Forum.ViewModel.RegisterViewModel

<div class="uk-flex uk-flex-center">
    <div class="uk-background-muted uk-padding uk-margin-medium-top">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <legend class="uk-legend">Sign up</legend>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input asp-for="Username" class="uk-input" type="text" placeholder="Username">
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                    <input asp-for="Email" class="uk-input" type="email" placeholder="Email">
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                    <input asp-for="Password" class="uk-input" type="password" placeholder="Password">
                    <span asp-validation-for="Password" />
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon"></span>
                    <input asp-for="ConfirmPassword" class="uk-input" type="password" placeholder="Repeat password">
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>

            <div class="uk-margin uk-text-center">
                <button type="submit" class="uk-button uk-button-primary">Create account</button>
            </div>

            <div class="uk-margin uk-text-center uk-text-small">
                <a asp-controller="Account" asp-action="Login">Already have an account? Log in</a>
            </div>

        </form>
    </div>
</div>
