@model Forum.ViewModel.RegisterViewModel

<div class="uk-flex uk-flex-center">
    <div class="uk-background-muted uk-padding uk-margin-medium-top">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <legend class="uk-legend">Sign up</legend>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input asp-for="Username" class="uk-input" type="text"
                           minlength="5"
                           maxlength="30"
                           pattern="[a-zA-Z][A-Za-z0-9]+"
                           placeholder="Username" required>
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                    <input asp-for="Email" class="uk-input" 
                           type="email"
                           pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$"
                           placeholder="Email" required>
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                    <input asp-for="Password" 
                           class="uk-input" 
                           type="password"
                           minlength="6" placeholder="Password" required>
                    <span asp-validation-for="Password" />
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon"></span>
                    <input asp-for="ConfirmPassword" class="uk-input" type="password" minlength="6" placeholder="Repeat password" required>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>

            <div class="uk-margin uk-text-center">
                <button type="submit" class="uk-button uk-button-primary">Create account</button>
            </div>

            <div class="uk-margin uk-text-center uk-text-small">
                <a asp-controller="Account" asp-action="Login">Already have an account? Log in</a>
            </div>

        </form>
    </div>
</div>
