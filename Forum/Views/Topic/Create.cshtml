<div class="uk-flex uk-flex-center uk-width-1-1">
    <div class="uk-background-muted uk-padding uk-margin-small-top">
        <form>
            <legend class="uk-legend">Create topic</legend>

            <div class="uk-margin">
                <label for="name"  class="uk-form-label">Name</label>
                <div class="uk-form-controls">
                    <input id="name" class="uk-input uk-form-width-large" type="text" placeholder="Name">
                </div>
            </div>

            <div class="uk-margin">
                <label for="description" class="uk-form-label">Description</label>
                <div class="uk-form-controls">
                    <textarea id="description" class="uk-textarea uk-form-width-large" rows="5" placeholder="Textarea"></textarea>
                </div>
            </div>

            <div class="uk-margin uk-text-center">
                <button type="submit" class="uk-button uk-button-primary">Create</button>
            </div>
        </form>
    </div>
</div>